---
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import Card from "@/components/Card.astro";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import Hr from "@/components/Hr.astro";
import LinkButton from "@/components/LinkButton.astro";
import Socials from "@/components/Socials.astro";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";
import { DEFAULT_LOCALE, SUPPORTED_LOCALES } from "@/i18n/config";
import { getRelativeLocalePath, translateFor } from "@/i18n/utils";
import Layout from "@/layouts/Layout.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import { getPostsByLocale } from "@/utils/posts";

import { getCollection } from "astro:content";

const blogPosts = await getCollection("blog");

const kashiCTFPosts = blogPosts.filter(
  (post) =>
    post.data.tags?.includes("kashictf") &&
    post.data.draft === false
);

const myBlogPosts = blogPosts.filter(
  (post) =>
    post.data.tags?.includes("blog") &&
    post.data.draft === false
);


const OTWbanditPosts = blogPosts.filter(
  (post) => post.data.tags?.includes("overthewire-bandit")
);
export async function getStaticPaths() {
  return SUPPORTED_LOCALES.map(locale => ({
    params: { locale: locale === DEFAULT_LOCALE ? undefined : locale },
  }));
}


const { locale = DEFAULT_LOCALE } = Astro.params;

const posts = await getPostsByLocale(locale);
const t = translateFor(Astro.currentLocale);

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main
    id="main-content"
    data-layout="index"
    data-backurl={getRelativeLocalePath(locale, "/")}
  >
    <section id="hero" class="pt-8 pb-6">
      <h1 class="my-4 inline-block text-4xl font-bold sm:my-8 sm:text-5xl">
        {t("hero.title")}
      </h1>
      <a
        target="_blank"
        href={getRelativeLocalePath(Astro.currentLocale, "/rss.xml")}
        class="inline-block"
        aria-label={t("a11y.rssFeed")}
        title={t("rssFeed")}
      >
        <IconRss
          width={20}
          height={20}
          class="scale-125 stroke-accent stroke-3 rtl:rotate-270"
        />
        <span class="sr-only">{t("rssFeed")}</span>
      </a>
      <p>
        {t("hero.body")}
      </p>
      <br>
      <p>
        {t("hero.bodyafter")}

      </p><br />
      <p class="mt-2">
        {t("hero.beforeReadme")}
        <LinkButton
          class="underline decoration-dashed underline-offset-4 hover:text-accent"
          href="/posts"
        >
          {t("hero.readme")}
        </LinkButton>
      </p>
      {
        // only display if at least one social link is enabled
        SOCIALS.length > 0 && (
          <div class="mt-4 flex flex-col sm:flex-row sm:items-center">
            <div class="me-2 mb-1 whitespace-nowrap sm:mb-0">
              {t("socialLinks")}:
            </div>
            <Socials />
          </div>
        )
      }
    </section>

    <Hr />
    {
      myBlogPosts.length >= 0 && (
        <>
          <section id="myBlogs" class="pt-12 pb-6">
            <h2 class="text-2xl font-semibold tracking-wide">My Blogs</h2>
            <ul>
              {myBlogPosts.map(data => (
                <Card {...data} variant="h3" />
              ))}
            </ul>
          </section>
          <Hr />
        </>
      )
    }

    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured" class="pt-12 pb-6">
            <h2 class="text-2xl font-semibold tracking-wide">
              {t("featured")}
            </h2>
            <ul>
              {featuredPosts.map(data => (
                <Card {...data} variant="h3" />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
          <Hr />
        </>
      )
    }
    {
      OTWbanditPosts.length > 0 && (
        <>
          <section id="otwBandit" class="pt-12 pb-6">
            <h2 class="text-2xl font-semibold tracking-wide">Over The Wire-Bandit</h2>
            <ul>
              {OTWbanditPosts.map(data => (
                <Card {...data} variant="h3" />
              ))}
            </ul>
          </section>
          <Hr />
        </>
      )
    }

    {
      kashiCTFPosts.length > 0 && (
        <>
          <section id="picoctf" class="pt-12 pb-6">
            <h2 class="text-2xl font-semibold tracking-wide">KashiCTF Writeups</h2>
            <ul>
              {kashiCTFPosts.map(data => (
                <Card {...data} variant="h3" />
              ))}
            </ul>
          </section>
          <Hr />
        </>
      )
    }


    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <h2 class="text-2xl font-semibold tracking-wide">
            {t("recentPosts")}
          </h2>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

    <div class="my-8 text-center">
      <LinkButton href="/posts/">
        {t("allPosts")}{" "}
        <IconArrowRight class="inline-block rtl:rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const element = document.querySelector("#main-content") as HTMLElement;
    const indexLayout = element?.dataset?.layout;
    const backUrl = element?.dataset?.backurl;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", backUrl ?? "/");
    }
  });
</script>
